{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@constants": ["constants"],
      "@navigation": ["navigation"],
      "@router": ["navigation/router"],
      "@redux": ["redux"],
      "@actions": ["redux/actions"],
      "@screens": ["screens"],
      "@utils": ["utils"],
      "@responsive": ["utils/responsive"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@theme": ["theme"],
      "@hooks": ["hooks"]
    }
  }
}
